<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <title><%= "#{t(:case)} - #{t(:report)} - #{@case.formated_name}" %></title>
    <%= stylesheet_link_tag("reports") %>
  </head>
  <body>

    <b><%= t(:case) %></b>: <%= @case.formated_name %><br />
    <b><%= t(:contractor) %></b>: <%= @case.sale.contact.formated_name %>&nbsp;(<%= @case.sale.formated_name %>)<br />
    <b><%= t(:recipient) %></b>: <%= @case.recipient.name %>
    <hr /><br />

    <table class="print" cellpadding="0" cellspacing="0">
      <thead style="font-weight:bold">
        <th width="20%"><%= t(:dati) %></th>
        <th width="60%"><%= t(:event) %></th>
        <th width="20%"><%= t(:user) %></th>
      </thead>
      <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.dati %></td>
          <td>
            <%= event.title %>
            <% if event.data and event.data.any? %>
              <% event.data.each do |d| %>
                <br /><i><%= d %></i>
              <% end %>
            <% end %>
          </td>
          <td><%= event.user %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </body>
</html>